<body class="login-page">
<div class="login-box">
    <div class="login-logo">
        <b>评分系统单点登录</b>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body" style="position: relative;">
        <p class="login-box-msg">Hi,欢迎来到评分系统，请填写登录信息</p>

        <form method="post">
            <div class="form-group has-feedback">
                <input type="text" name="userId" class="form-control info" placeholder="学号/工号"
                       required="" style="width:320px;"/>
                <span class="glyphicon glyphicon-star form-control-feedback"></span>
            </div>

            <div class="form-group has-feedback">
                <input type="password" name="password" class="form-control pass" placeholder="请输入密码"
                       required="" style="width:320px;"/>
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <br>
            <div>
                <button type="submit" class="btn btn-primary btn-block btn-flat"><b>登&nbsp;&nbsp录</b>
                </button>
            </div>
            <br>
        </form>
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
</body>
</html>